    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/textView24" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/current_connection_interval" android:layout_weight="0.1" android:paddingStart="10dp"/>
        <TextView android:layout_gravity="right" android:id="@+id/aa_con_interval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/na" android:paddingEnd="10dp"/>
    </LinearLayout>
