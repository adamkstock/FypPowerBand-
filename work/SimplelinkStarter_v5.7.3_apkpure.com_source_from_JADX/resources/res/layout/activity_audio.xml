<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="25dp" android:layout_gravity="center_horizontal" android:id="@+id/textView20" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BLE Audio Control"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp"/>
