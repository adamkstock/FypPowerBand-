<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/dtr_row" android:background="?android:attr/selectableItemBackground" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/dtr_icon" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@mipmap/sensortag2_deviceinfo" android:layout_weight="0.1"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="140dp" android:layout_weight="1">
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#666" android:id="@+id/dtr_characteristic_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/characteristic_title"/>
        <TextView android:textSize="13dp" android:id="@+id/dtr_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/double_zero_units"/>
        <TextView android:id="@+id/dtr_uuid_field" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:textColor="#000" android:id="@+id/dtr_clock_chkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enable_clock"/>
            <CheckBox android:textColor="#000" android:id="@+id/dtr_invert_chkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/invert_display"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textColor="#666" android:id="@+id/textView28" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/display_text"/>
            <EditText android:textColor="#666" android:id="@+id/dtr_display_text" android:layout_width="100dp" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/dtr_disclosure_indicator" android:layout_width="25dp" android:layout_height="wrap_content" android:src="@mipmap/cell_disclose_indicator" android:layout_weight="0.1"/>
</TableRow>
