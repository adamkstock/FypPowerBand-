<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/cloud_configuration_tr" android:background="?android:attr/selectableItemBackground" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/cloud_config_tr_icon" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@mipmap/sensortag2_deviceinfo" android:layout_weight="0.1"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#666" android:id="@+id/cloud_config_tr_characteristic_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/characteristic_title"/>
        <TextView android:textSize="13dp" android:id="@+id/cloud_config_tr_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/triple_zero_units"/>
        <Switch android:textColor="#000" android:id="@+id/cloud_config_tr_push_to_cloud_sw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/push_to_cloud"/>
        <TextView android:textColor="#666" android:id="@+id/cloud_config_tr_cloud_url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/open_in_web_browser"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:id="@+id/cloud_config_tr_advanced_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/advanced"/>
            <ImageView android:id="@+id/cloud_config_tr_cloud_status_image" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/cloud_disconnected"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/imageView" android:layout_width="25dp" android:layout_height="wrap_content" android:src="@mipmap/cell_disclose_indicator" android:layout_weight="0.1"/>
</TableRow>
