<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/sleep_timer_table_row" android:background="?android:attr/selectableItemBackground" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/cloud_config_tr_icon" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@mipmap/sensortag2_deviceinfo" android:layout_weight="0.1"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="18dp" android:textStyle="bold" android:id="@+id/cloud_config_tr_characteristic_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Characteristic Title"/>
        <TextView android:textSize="13dp" android:id="@+id/cloud_config_tr_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="0.00 Units"/>
        <SeekBar android:id="@+id/sttr_sleep_interval" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:id="@+id/cloud_config_tr_advanced_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Advanced"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/imageView" android:layout_width="25dp" android:layout_height="wrap_content" android:src="@mipmap/cell_disclose_indicator" android:layout_weight="0.1"/>
</TableRow>
