<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent"> xmlns:app=&quot;http://schemas.android.com/apk/res-auto&quot;\10    xmlns:tools=&quot;http://schemas.android.com/tools&quot; 
    <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/afue_icon" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/eoad_logo"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/textView65" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Select Image:" android:layout_weight="1" android:textAlignment="center"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:enabled="false" android:layout_gravity="center" android:id="@+id/afue_select_file_button" android:layout_width="150dp" android:layout_height="wrap_content" android:text="Factory Image" android:layout_weight="1"/>
            <Button android:enabled="false" android:id="@+id/afue_select_custom_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Custom Image" android:layout_weight="1"/>
        </LinearLayout>
        <ProgressBar android:id="@+id/afue_oad_progress_bar" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="18sp" android:layout_gravity="center" android:id="@+id/afue_oad_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zero_percent"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:id="@+id/textView59" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Status:" android:layout_weight="0.8"/>
            <TextView android:textSize="12sp" android:gravity="right" android:id="@+id/afue_status_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Idle" android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:id="@+id/textView62" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/eoad_current_block_label_title" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:gravity="right" android:id="@+id/afue_oad_current_block" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" android:paddingStart="5dp" android:paddingEnd="8dp"/>
            <TextView android:textStyle="bold" android:id="@+id/textView64" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/eoad_total_block_label_title" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:gravity="right" android:id="@+id/afue_oad_total_blocks" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" android:paddingStart="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:id="@+id/textView66" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/eoad_mtu_size_title" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:gravity="right" android:id="@+id/afue_oad_mtu" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" android:paddingStart="5dp" android:paddingEnd="8dp"/>
            <TextView android:textStyle="bold" android:id="@+id/textView68" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/eoad_block_size_title" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:gravity="right" android:id="@+id/afue_oad_block_size" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" android:paddingStart="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:id="@+id/textView70" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/eoad_select_chip_type_title" android:layout_weight="1"/>
            <TextView android:gravity="right" android:id="@+id/afue_chip_type" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Unknown" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:id="@+id/textView63" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Speed:"/>
            <TextView android:gravity="right" android:id="@+id/afue_current_speed" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="0.0Kb/s" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textStyle="bold" android:gravity="center" android:id="@+id/textView60" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Speed History:"/>
        <com.p004ti.util.SparkLineView android:id="@+id/afue_speed_history_graph" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="100dp"/>
        <TextView android:textStyle="bold" android:gravity="center" android:id="@+id/textView67" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Header Info:"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/afue_image_info" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
