    <ImageView android:layout_gravity="center_vertical" android:id="@+id/device_table_row_rssi_level" android:padding="3dp" android:layout_width="50dp" android:layout_height="50dp" android:src="@mipmap/rssi_meter_0" android:layout_weight="1"/>
